{
  "name": "westrikworld",
  "version": "0.1.0",
  "main": "App.tsx",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "./scripts/process_icons.sh && yarn parcel src/index.html",
    "build": "./scripts/process_icons.sh && yarn parcel build src/index.html",
    "build:icons": "./scripts/process_icons.sh",
    "lint": "yarn lint:ts;yarn lint:style",
    "lint:ts": "yarn eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:style": "yarn stylelint src/**/*.scss",
    "fix": "yarn lint:ts --fix;yarn lint:style --fix",
    "test": "yarn mocha -r ts-node/register -r tsconfig-paths/register -r tests/setup.js tests/{**/,}*-test.ts{,x}",
    "test:watch": "yarn mocha --watch --watch-files src,tests -r ts-node/register -r tsconfig-paths/register -r tests/setup.js tests/{**/,}*-test.ts{,x}",
    "typecheck": "yarn tsc --skipLibCheck",
    "chk": "yarn typecheck && yarn lint",
    "snapshot": "build-storybook && percy-storybook --widths=320,1280",
    "storybook": "start-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@percy/storybook": "^3.3.0",
    "@storybook/preact": "^6.0.21",
    "@types/chai": "^4.2.7",
    "@types/codemirror": "^0.0.98",
    "@types/enzyme": "^3.10.5",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.0.6",
    "jsdom": "^16.2.0",
    "mocha": "^8.1.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0",
    "sass": "^1.24",
    "sass-loader": "^10.0.2",
    "sinon": "^9.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^20.0",
    "svgo": "^1.3.2",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.1.1",
    "codemirror": "^5.55.0",
    "preact": "^10.1.1",
    "preact-router": "^3.1.0",
    "react-popper": "^2.0"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
